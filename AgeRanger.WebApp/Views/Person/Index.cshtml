@model IEnumerable<AgeRanger.WebApp.Models.PersonViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Age Ranger</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LName)
        </th>
